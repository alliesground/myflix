%section.reset_password.container
  .row
    .col-sm-10.col-sm-offset-1
      = bootstrap_form_tag url: update_password_path, method: :patch do |f|
        %header
          %h1 Reset Your Password
        %fieldset.form-group
          .row
            .col-sm-4
              = f.password_field :new_password, label: 'New Password'
              = hidden_field_tag :token, @token
        %fieldset.form-group.action
          = f.submit "Reset Password", class: 'btn btn-default'
